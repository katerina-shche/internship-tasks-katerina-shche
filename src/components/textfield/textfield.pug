mixin textfield(props)
	.textfield&attributes(attributes)(data-component='textfield')
		label(for="message").textfield__label Ваше сообщение
		textarea&attributes(attributes)(id='message' placeholder="Ваше сообщение" name="message"  maxlength="1000" required).textfield__input Ваше сообщение
		span.textfield__span 