mixin files(props)
	.files&attributes(attributes)(data-component='files')
		.files__label-box
			label(for='files').button-outlined.files__label
				span.files__span Прикрепить файл
				+svg('plus').btn__svg.files__svg
			input(type='file' multiple accept=".pdf, .doc, .docx, .jpeg" id='files' name='files' placeholder='Прикрепить файл').files__input
			.files__names
		span.files__error

		//- jpeg потом убрать