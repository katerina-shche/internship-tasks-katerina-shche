mixin feedback-form(props)
	form.feedback-form&attributes(attributes)(data-component='feedback-form')
		h1.feedback-form__title 
			| Форма обратной
			br
			| связи
		.feedback-form__input-container 
			+email()
			+textfield()
			
			label(for='files') Прикрепить файл
				input(type='file' id='files' name='files' placeholder='Прикрепить файл')
			+confirm()
			+button({text: 'Отправить'})(class="button-outlined")
